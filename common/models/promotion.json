{
  "name": "Promotion",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "strictObjectIDCoercion": true
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "createdAt": {
      "type": "date",
      "required": true,
      "defaultFn": "now"
    },
    "image": {
      "type": "string"
    },
    "expirationDate": {
      "type": "date"
    },
    "active": {
      "type": "boolean",
      "required": true,
      "default": true
    }
  },
  "validations": [],
  "relations": {
    "restaurant": {
      "type": "belongsTo",
      "model": "Restaurant",
      "foreignKey": ""
    },
    "branch": { 
      "type": "belongsTo",
      "model": "Branch",
      "foreignKey": ""
    }
  },
  "acls": [],
  "methods": {
    "findByLocation": {
      "isStatic": true,
      "accepts": [
        {
          "arg": "lat",
          "type": "number",
          "required": true,
          "description": "Latitude."
        },
        {
          "arg": "lng",
          "type": "number",
          "required": true,
          "description": "Longitude."
        },
        {
          "arg": "tagName",
          "type": "string",
          "required": false,
          "description": "Tag or name for match it in the search. "
        },
        {
          "arg": "options",
          "type": "object",
          "http": "optionsFromRequest"
        }
      ],
      "returns": {
        "root": "true",
        "type": "object"
      },
      "description": "Find promotions based on coordinate and category",
      "http": [
        {
          "path": "/findByLocation",
          "verb": "get"
        }
      ]
    }
  }
}
